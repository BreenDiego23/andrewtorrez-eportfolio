{{> header}}

<div id="background">
  <div id="page">
    <div id="contents">
      <div class="box">
        <div class="body">
          <h1>{{title}}</h1>
          <ul id="sites">
            {{#each trips}}
              <li>
                <a href="#"><img src="/images/{{this.image}}" alt="{{this.name}}"></a>
                <h2>{{this.name}}</h2>
                {{{this.description}}}
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

{{> footer}}
